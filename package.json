{
  "name": "worklog",
  "version": "1.0.0",
  "description": "Multi-tenant time tracking application",
  "private": true,
  "workspaces": [
    "apps/api",
    "apps/web",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm run dev:api\" \"pnpm run dev:web\" \"pnpm run dev:mobile\"",
    "dev:api": "cd apps/api && pnpm run dev",
    "dev:web": "cd apps/web && pnpm run dev",
    "dev:mobile": "cd apps/mobile && pnpm run dev",
    "build": "pnpm run build:api && pnpm run build:web && pnpm run build:mobile",
    "build:api": "cd apps/api && pnpm run build",
    "build:web": "cd apps/web && pnpm run build",
    "build:mobile": "cd apps/mobile && pnpm run build",
    "test": "pnpm run test:api && pnpm run test:web && pnpm run test:mobile",
    "test:api": "cd apps/api && pnpm run test",
    "test:web": "cd apps/web && pnpm run test",
    "test:mobile": "cd apps/mobile && pnpm run test",
    "lint": "pnpm run lint:api && pnpm run lint:web && pnpm run lint:mobile",
    "lint:api": "cd apps/api && pnpm run lint",
    "lint:web": "cd apps/web && pnpm run lint",
    "lint:mobile": "cd apps/mobile && pnpm run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "install:all": "pnpm install && pnpm run install:api && pnpm run install:web && pnpm run install:mobile",
    "install:api": "cd apps/api && pnpm install",
    "install:web": "cd apps/web && pnpm install",
    "install:mobile": "cd apps/mobile && pnpm install",
    "db:migrate": "cd apps/api && pnpm run db:migrate",
    "db:generate": "cd apps/api && pnpm run db:generate",
    "db:push": "cd apps/api && pnpm exec prisma db push",
    "db:seed": "cd apps/api && pnpm run db:seed",
    "db:reset": "cd apps/api && pnpm run db:reset",
    "docs:generate": "cd apps/api && pnpm run docs:generate",
    "docs:serve": "cd apps/api && pnpm run docs:serve",
    "client:generate": "cd packages/api-client && pnpm run generate",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "prepare": "node -e \"if(!process.env.CI){require('husky').install();}\" || true"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.2.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "time-tracking",
    "multi-tenant",
    "react",
    "react-native",
    "nodejs",
    "typescript"
  ],
  "author": "WorkLog Team",
  "license": "MIT"
}